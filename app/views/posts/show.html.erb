<div class="posts-show">
    <div class="posts-show-shosai">
    <h1>投稿詳細</h1>
        <div class="posts-show-shosai-posts">
            <p><%= @post.user.name %></p>
            <p><%= @post.body %></p>
            <p><%= @post.content %></p>
            <p><%= @post.created_at %></p>
            <img src="<%= @post.image_url %>" alt="画像なし" style="width:300px;height:auto;">
        </div>
    </div>

    <div class="posts-show-map">
        <div id='map'></div>
        <style>
        #map {
        height: 600px;
        width: 600px;
        }
        </style>
    </div>


    <!-- js部分 -->
    <script>//初期マップの設定
        let map
        let marker
        function initMap(){
        geocoder = new google.maps.Geocoder()

        map = new google.maps.Map(document.getElementById('map'), {
        center:  {lat: <%= @post.lat %>, lng: <%= @post.lng %>},
        zoom: 15,
        });

        marker = new google.maps.Marker({
        position:  {lat: <%= @post.lat %>, lng: <%= @post.lng %>},
        map: map
        });
        }
    </script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDKSPi47Q4upgG0gVTuzNm64FpMb-kKNnU&callback=initMap" async defer></script>
</div>